<div class="authform">
<%= simple_form_for(@customer,:html => { :role => 'form'}) do |f| %>
  <%= f.error_notification%>

  <div class="form-group">
  	<%= f.input :name , :autofocus => true, :class=>'form-control' %>
  </div>
  <div class="form-group">
  	<%= f.input :address , :autofocus => true, :class=> 'form-control' %>
  </div>
  <div class="form-group">
  	<%= f.input :city , :autofocus => true, :class=> 'form-control' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit,:class=>"button" %>
    <%= link_to 'Back', customers_path ,:class=>"button"%>
  </div>
<% end %>
</div>
