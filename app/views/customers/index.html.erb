
<%-if user_signed_in?%>

<div class="top-padding-10">
  <span>
    <%= link_to  new_customer_path, :class=>"btn btn-success btn-padding" do%>
    <span class="glyphicon glyphicon-user"></span> New Customer
    <%end%>
  </span>
<span>
    <%= link_to  new_contact_path, :class=>"btn btn-success btn-padding" do%>
    <span class="glyphicon glyphicon-earphone"></span> New Contact
    <%end%>
  </span>
<span>
  <%= link_to  new_email_path ,:class=>"btn-padding btn btn-success" do%>
<span class="glyphicon glyphicon-envelope"></span> New Email
<%end%>
</span>
<span>
  <%= link_to  new_note_path ,:class=>" btn btn-success btn-padding" do%>
<span class="glyphicon glyphicon-comment"></span> New Note
<%end%>
</span>
</div>
  
<table class="table table-bordered table-striped">
  <thead>
    <tr >
        <td colspan="5" class="active">
          <strong>Contacts</strong>
        </td>

      </tr>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= link_to customer.name,emails_path(:customer_id=>customer) %></td>
        <td><%= customer.address %></td>
        <td><%= customer.city %></td>
        <td><%= link_to edit_customer_path(customer),:title=>"Edit" do%>
          <span class="glyphicon glyphicon-edit"></span><%end%>
        </td>
        <td><%= link_to customer, method: :delete, data: { confirm: 'Are you sure?' },:title=>"Delete" do%>
          <span class="glyphicon glyphicon-trash"></span><%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%else%>
<div class="jumbotron">
      <div class="container">
        <h1>Getting started</h1>
        <p>An overview of Bootstrap, how to download and use, basic templates and examples, and more.</p>
        
      </div>
    </div>
<%end%>
