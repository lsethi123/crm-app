
<div class="col-md-6 col-md-offset-3" style="background-color: #F1F5FA;
">
<%= simple_form_for(@prospect,:html => { :role => 'form'}) do |f| %>
  <%= f.error_notification%>

  <div class="form-group">
  	<%= f.input :name %>
    <%= f.input :address%>
    <%= f.input :city %>
    <%= f.hidden_field :user_id, :value => current_user.id%>
    <%= f.input :due_date%>
  </div>

  <!--<div class="form-group">
    <#%=select("prospect", "stage_id", @stages.collect {|p| [ p.name, p.id ] }, {prompt: 'Select Stage'})%>

  </div>-->

  <div class="form-actions">
    <%= f.button :submit,:class=>"btn btn-success",:value=>"Save" %>
    <%= link_to 'Back', prospects_path ,:class=>"btn btn-primary"%>
  </div>
<% end %>
</div>
