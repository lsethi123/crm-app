
<div class="col-sm-7">
  <!--<h4>Listing Contact for Customer <%=@customer.name%></h4>-->

  <table class="table table-bordered table-striped">
    <thead>
      <tr >
        <td colspan="4" class="active">
          <strong>Contacts</strong>
        </td>
      <tr>
      <tr>
        <th>Name</th>
        <th>Company</th>
        <th>Phone</th>
        <th>Email</th>
      </tr>
    </thead>

    <tbody>
      <% @contacts.each do |contact| %>
        <tr>
          <td><%= contact.name %></td>
          <td><%= contact.company %></td>
          <td><%= contact.phone %></td>
          <td><%= contact.email %></td>
          <!--<td><%= link_to 'Show', contact %></td>
          <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
          <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<script>
$(document).ready(function(){
  $('.header').click(function () {
    var $this = $(this);
    $(this).nextUntil('tr.header').slideToggle(100).promise().done(function () {
        $this.find('span').text(function (_, value) {
            return value == '+' ? '-' : '+'
        });
    });
});
});
</script>

<div class="col-sm-4">

<table class="table table-bordered table-striped">
  <tr >
    <td colspan="4" class="active">
      <strong>Emails</strong>
    </td>
   <% @emails.each do |e| %>
  <tr  class="header">
    <td colspan="2" title="Click to Expand"><%-if !e.contact_id.nil? %><%= Contact.select("email").find(e.contact_id).email %><%end%></td>
  </tr>
  <tr  style="display:none">
    <td><%=e.subject%></td>
    <td><%=e.message%></td>
  </tr>
  <%end%>
</table>








<br>


<table class="table table-bordered table-striped">
  <thead>
    <tr class=" widget-header-small">
      <th><strong>Note</strong></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.note %></td>
        <!--<td><%= link_to 'Show', note %></td>-->
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>